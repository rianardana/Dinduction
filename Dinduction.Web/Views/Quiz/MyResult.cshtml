@using Dinduction.Application.DTOs
@model IEnumerable<UserTrainingDTO>

@{
    var employeeName = Context.Session.GetString("EmployeeName") ?? "User";
    
    // ✅ Training IDs sesuai Quiz/Index
    var trainingOrder = new[] { 10, 2, 3, 4, 5, 6, 7, 8 };
}

<style>
    body {
        background-color: #f8fafc;
        min-height: 100dvh;
        display: flex;
        flex-direction: column;
    }
    .card {
        transition: all 0.2s ease-in-out;
    }
    .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.07);
    }

    /* Header Minimalis */
    .header-bar {
        background: white;
        border-bottom: 1px solid #e5e7eb;
        padding: 12px 16px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.875rem;
    }
    .header-title {
        font-weight: 600;
        color: #1e3a8a;
    }
    .logout-link {
        display: flex;
        align-items: center;
        gap: 4px;
        color: #4b5563;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }
    .logout-link:hover {
        color: #2563eb;
    }
    .logout-icon {
        width: 16px;
        height: 16px;
        stroke: currentColor;
        stroke-width: 1.7;
        transition: transform 0.2s ease;
    }
    .logout-link:hover .logout-icon {
        transform: translateX(-2px);
    }

    /* Card User Info */
    .user-card {
        background: white;
        border-radius: 12px;
        padding: 16px;
        margin: 16px auto 24px;
        max-width: 500px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        border: 1px solid #e5e7eb;
    }
    .user-card h5 {
        font-weight: 600;
        margin: 0;
        color: #1e3a8a;
    }
    .user-card p {
        margin: 4px 0 0;
        font-size: 0.875rem;
        color: #64748b;
    }

    /* Quiz Card — disesuaikan dengan gaya dashboard */
    .quiz-card {
        background: white;
        border-radius: 12px;
        padding: 16px;
        margin: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        border: 1px solid #e5e7eb;
        transition: all 0.2s ease;
        display: flex;
        align-items: flex-start;
        min-height: 80px;
    }
    .quiz-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.08);
        border-color: #cbd5e1;
    }
    .quiz-card img {
        width: 56px;
        height: 56px;
        object-fit: contain;
        margin-right: 12px;
        flex-shrink: 0;
    }
    .quiz-card-label {
        font-weight: 600;
        color: #1e3a8a;
        font-size: 0.95rem;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    /* Status Badge - Modern & Professional */
    .status-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 4px 12px;
        border-radius: 20px; /* ✅ Bulat besar */
        font-size: 0.75rem;
        font-weight: 600;
        margin-top: 6px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .status-badge.lulus {
        background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
        color: #166534;
    }
    .status-badge.gagal {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #991b1b;
    }
    .status-badge.belum-diambil {
        background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
        color: #4b5563;
    }

    /* Footer */
    .footer-sticky {
        margin-top: auto;
        padding: 12px 16px;
        background: white;
        border-top: 1px solid #e5e7eb;
        text-align: center;
        font-size: 0.75rem;
        color: #64748b;
    }
</style>

<div class="px-4 py-6">
    <div class="max-w-6xl mx-auto">
        <h2 class="text-xl font-bold text-gray-800 text-center mb-6">HASIL TRAINING SAYA</h2>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
            @foreach (var trainingId in trainingOrder)
            {
                var training = Model?.FirstOrDefault(t => t.TrainingId == trainingId);
                var trainingName = GetTrainingName(trainingId);
                
                <a href="/Quiz/Record/@trainingId" class="block">
                    <div class="quiz-card">
                        <img src="~/Images/@(trainingId).png" 
                             alt="@trainingName" 
                             onerror="this.src='/Images/default.png'" />
                        <div>
                            <div class="font-semibold text-gray-800 text-sm">@trainingName</div>
                            @if (training != null)
                            {
                                <span class="status-badge @GetStatusClass(training.Status)">
                                    @GetStatusText(training.Status)
                                </span>
                            }
                            else
                            {
                                <span class="status-badge belum-diambil">Belum Diambil</span>
                            }
                        </div>
                    </div>
                </a>
            }
        </div>
        <!-- Back to Home Button -->
        <div class="text-center mt-8 mb-6">
            <a href="@Url.Action("Index", "Home")" class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-sm hover:shadow-md">
                <svg class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Back to Home
            </a>
        </div>
    </div>
</div>

@functions {
    string GetTrainingName(int trainingId)
    {
        return trainingId switch
        {
            10 => "PROFIL PERUSAHAAN DAN PROSES PRODUKSI",
            2 => "KEBIJAKAN KUALITAS PERUSAHAAN",
            3 => "PENGENALAN 5S DAN IMPLEMENTASINYA",
            4 => "LINGKUNGAN",
            5 => "PERSYARATAN DIE CASTING",
            6 => "KESEHATAN DAN KESELAMATAN KERJA",
            7 => "ORIENTASI KARYAWAN BARU",
            8 => "PEDOMAN ETIKA USAHA DAN TATA PERILAKU DYNACAST",
            _ => "Training Tidak Diketahui"
        };
    }
    
    string GetStatusClass(string status)
    {
        return status?.ToLower() switch
        {
            "lulus" or "pass" => "lulus",
            "gagal" or "failed" => "gagal",
            _ => "belum-diambil"
        };
    }
    
    string GetStatusText(string status)
    {
        return status?.ToLower() switch
        {
            "lulus" or "pass" => "Lulus",
            "gagal" or "failed" => "Gagal",
            _ => "Belum Diambil"
        };
    }
}