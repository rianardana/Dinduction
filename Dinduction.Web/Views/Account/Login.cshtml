@model Dinduction.Web.Models.LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign in • Dinduction</title>
    <link rel="icon" type="image/x-icon" href="~/img/Dind.ico" />
    <!-- ✅ Link CSS lokal -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 min-h-screen flex items-center justify-center p-4">

    <div class="w-full max-w-md">
        <!-- Header Logo -->
        <div class="text-center mb-8">
            <div class="mx-auto mb-4 bg-white rounded-2xl p-2 shadow-lg border border-blue-100 inline-block">
                <img src="~/images/symbol.jpg" alt="Dinduction Logo" class="h-16 w-16 object-contain" />
            </div>
            <h1 class="text-3xl font-bold text-gray-800">Dinduction</h1>
            <p class="text-gray-600 mt-1">Onboarding the Future.</p>
        </div>

        <!-- Login Card -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden">
            <div class="p-6 sm:p-8">
                <h2 class="text-xl font-semibold text-gray-800 text-center">Sign in to your account</h2>
                <p class="text-gray-500 text-center text-sm mt-1">Enter your credentials to continue</p>

                <form method="post" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl" class="mt-6 space-y-5">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                    <!-- Validation Summary -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="rounded-lg bg-red-50 border border-red-200 p-3 text-sm text-red-700">
                            <ul class="list-disc pl-5 space-y-1">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <!-- Username Field -->
                    <div>
                        <label for="UserName" class="block text-sm font-medium text-gray-700 mb-1.5">
                            Username or Badge
                        </label>
                        <input asp-for="UserName"
                               id="UserName"
                               class="w-full px-4 py-3 text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
                               placeholder="e.g. DD123456 or username"
                               autofocus />
                        <span asp-validation-for="UserName" class="mt-1 text-sm text-red-600 block"></span>
                    </div>

                    <!-- Password Field -->
                    <div>
                        <label for="Password" class="block text-sm font-medium text-gray-700 mb-1.5">
                            Password
                        </label>
                        <input asp-for="Password"
                               id="Password"
                               type="password"
                               class="w-full px-4 py-3 text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition"
                               placeholder="••••••••" />
                        <span asp-validation-for="Password" class="mt-1 text-sm text-red-600 block"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit"
                            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg shadow-sm hover:shadow-md transition duration-200 ease-in-out transform hover:-translate-y-0.5 active:translate-y-0">
                        Sign In
                    </button>
                </form>
            </div>

            <!-- Footer -->
            <div class="bg-gray-50 px-6 py-3 text-center border-t border-gray-100">
                <p class="text-xs text-gray-500">© 2025 Dynacast IT • All rights reserved</p>
            </div>
        </div>
    </div>

</body>
</html>