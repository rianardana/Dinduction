<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dinduction</title>
    
    <!-- TAILWIND CDN untuk testing -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Reset inline styles yang mungkin ganggu -->
    <style>
        /* Hard reset untuk pastikan tidak ada interference */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        
        /* Kill default ASP.NET styles */
        body {
            font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            display: flex !important;
            flex-direction: column !important;
            min-height: 100vh !important;
            background-color: #f9fafb !important;
        }
        
        /* Force header position */
        header {
            position: relative !important;
            z-index: 10 !important;
        }
        
        /* Force main flex */
        main {
            flex: 1 !important;
        }
        
        /* Force footer position */
        footer {
            position: relative !important;
            margin-top: auto !important;
        }
    </style>
    
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="min-h-screen flex flex-col bg-gray-50">

    <!-- HEADER -->
    <header class="bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <a asp-controller="Home" asp-action="Index"class="text-xl font-bold text-gray-900 hover:text-blue-600 transition">
                    Dinduction
                </a>

                    @if (!string.IsNullOrEmpty(Context.Session.GetString("UserName")))
                    {
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit"
                                    class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded-md transition">
                                <!-- Heroicons: ArrowRightOnRectangle -->
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"  d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m0 0l3-3m-3 3l-3-3" />
                                </svg>
                                Logout
                            </button>
                        </form>
                    }

            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-1 w-full">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <p class="text-center text-sm text-gray-600">
                © 2026 - Dynacast IT • All rights reserved
                <a asp-controller="Home" asp-action="Contact" class="text-blue-600 hover:text-blue-700 hover:underline ml-1 transition">
                    Contact
                </a>
            </p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>