@{
    
    var employeeName = Context.Session.GetString("EmployeeName") ?? "User";
    var role = Context.Session.GetString("Role") ?? "2";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dinduction • Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #f8fafc;
            min-height: 100dvh;
            display: flex;
            flex-direction: column;
        }
        .card {
            transition: all 0.2s ease-in-out;
        }
        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.07);
        }

        /* Header Minimalis */
        .header-bar {
            background: white;
            border-bottom: 1px solid #e5e7eb;
            padding: 12px 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.875rem;
        }
        .header-title {
            font-weight: 600;
            color: #1e3a8a;
        }
        .logout-link {
            display: flex;
            align-items: center;
            gap: 4px;
            color: #4b5563;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }
        .logout-link:hover {
            color: #2563eb;
        }
        .logout-icon {
            width: 16px;
            height: 16px;
            stroke: currentColor;
            stroke-width: 1.7;
            transition: transform 0.2s ease;
        }
        .logout-link:hover .logout-icon {
            transform: translateX(-2px);
        }

        /* Card User Info */
        .user-card {
            background: white;
            border-radius: 12px;
            padding: 16px;
            margin: 16px auto 24px;
            max-width: 500px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
            border: 1px solid #e5e7eb;
        }
        .user-card h5 {
            font-weight: 600;
            margin: 0;
            color: #1e3a8a;
        }
        .user-card p {
            margin: 4px 0 0;
            font-size: 0.875rem;
            color: #64748b;
        }

        /* Card Konten */
        .content-card {
            background: white;
            border-radius: 12px;
            padding: 16px;
            margin: 16px auto;
            max-width: 500px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
            border: 1px solid #e5e7eb;
        }
        .content-card h3 {
            font-weight: 600;
            margin: 0 0 8px;
            color: #1e3a8a;
        }
        .content-card p {
            margin: 0;
            font-size: 0.875rem;
            color: #64748b;
        }

        /* Gambar Card */
        .card-image {
            width: 64px;
            height: 64px;
            object-fit: contain;
            margin-right: 12px;
        }
    </style>
</head>
<body class="font-sans">


    <!-- Card User Info -->
    <div class="user-card">
        <h5>Hi, @employeeName</h5>
        <p>
            @if (role == "1") { <span>Administrator</span> }
            else if (role == "3") { <span>Trainer</span> }
            else { <span>Peserta</span> }
        </p>
    </div>

    <!-- Konten Dinamis Berdasarkan Role -->
    <div class="px-4 flex-1 pb-6">
        <div class="max-w-4xl mx-auto">

            @if (role == "1")
            {
                <!-- Admin: 5 Card -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    <a href="/User" class="block">
                        <div class="card bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:bg-blue-50">
                            <div class="flex items-center">
                                <img src="~/Images/user.png" alt="User" class="card-image" />
                                <div>
                                    <h3 class="font-semibold text-gray-800 text-lg">User Management</h3>
                                    <p class="text-gray-500 text-xs mt-1 line-clamp-2">Kelola akun pengguna, tambah, edit, atau hapus.</p>
                                </div>
                            </div>
                        </div>
                    </a>

                    <a href="/Dashboard" class="block">
                        <div class="card bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:bg-green-50">
                            <div class="flex items-center">
                                <img src="~/Images/dashboard.png" alt="Dashboard" class="card-image" />
                                <div>
                                    <h3 class="font-semibold text-gray-800 text-lg">Training Dashboard</h3>
                                    <p class="text-gray-500 text-xs mt-1 line-clamp-2">Lihat statistik training harian, mingguan, dan bulanan.</p>
                                </div>
                            </div>
                        </div>
                    </a>

                    <a href="/Section" class="block">
                        <div class="card bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:bg-green-50">
                            <div class="flex items-center">
                                <img src="~/Images/section.png" alt="Dashboard" class="card-image" />
                                <div>
                                    <h3 class="font-semibold text-gray-800 text-lg">Section</h3>
                                    <p class="text-gray-500 text-xs mt-1 line-clamp-2">Lihat section yang tersedia untuk penyedia layanan training.</p>
                                </div>
                            </div>
                        </div>
                    </a>

                    <a href="/Report/GetPresence" class="block">
                        <div class="card bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:bg-purple-50">
                            <div class="flex items-center">
                                <img src="~/Images/result.png" alt="Report" class="card-image" />
                                <div>
                                    <h3 class="font-semibold text-gray-800 text-lg">Presence Report</h3>
                                    <p class="text-gray-500 text-xs mt-1 line-clamp-2">Ekspor data kehadiran peserta dalam format Excel.</p>
                                </div>
                            </div>
                        </div>
                    </a>

                    <a href="/Role" class="block">
                        <div class="card bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:bg-amber-50">
                            <div class="flex items-center">
                                <img src="~/Images/role.png" alt="Role" class="card-image" />
                                <div>
                                    <h3 class="font-semibold text-gray-800 text-lg">Role Management</h3>
                                    <p class="text-gray-500 text-xs mt-1 line-clamp-2">Atur hak akses user berdasarkan peran.</p>
                                </div>
                            </div>
                        </div>
                    </a>

                    <a href="/Trainer" class="block">
                        <div class="card bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:bg-amber-50">
                            <div class="flex items-center">
                                <img src="~/Images/trainer.png" alt="Role" class="card-image" />
                                <div>
                                    <h3 class="font-semibold text-gray-800 text-lg">Trainer Management</h3>
                                    <p class="text-gray-500 text-xs mt-1 line-clamp-2">Atur user trainer untuk melaksanakan training.</p>
                                </div>
                            </div>
                        </div>
                    </a>


                    <a href="/MasterTraining" class="block">
                        <div class="card bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:bg-indigo-50">
                            <div class="flex items-center">
                                <img src="~/Images/training.png" alt="Training" class="card-image" />
                                <div>
                                    <h3 class="font-semibold text-gray-800 text-lg">Master Training</h3>
                                    <p class="text-gray-500 text-xs mt-1 line-clamp-2">Kelola daftar training dan soal quiz yang tersedia.</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
            else if (role == "3")
            {
                <!-- Trainer: 2 Card -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <a href="/Participant/ChooseTraining" class="block">
                        <div class="card bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:bg-blue-50">
                            <div class="flex items-center">
                                <img src="~/Images/participant.png" alt="Participant" class="card-image" />
                                <div>
                                    <h3 class="font-semibold text-gray-800 text-lg">Participant List</h3>
                                    <p class="text-gray-500 text-xs mt-1 line-clamp-2">Pilih dan kelola peserta training yang akan kamu bimbing.</p>
                                </div>
                            </div>
                        </div>
                    </a>

                    <a href="/Report/GetPresenceByTrainer" class="block">
                        <div class="card bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:bg-purple-50">
                            <div class="flex items-center">
                                <img src="~/Images/result.png" alt="Report" class="card-image" />
                                <div>
                                    <h3 class="font-semibold text-gray-800 text-lg">Your Presence Report</h3>
                                    <p class="text-gray-500 text-xs mt-1 line-clamp-2">Lihat rekap kehadiran peserta yang kamu latih.</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
            else
            {
                <!-- User: 2 Card -->
                <div class="grid grid-cols-1 gap-6">
                    <a href="/Quiz/Index" class="block">
                        <div class="card bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:bg-blue-50">
                            <div class="flex items-center">
                                <img src="~/Images/Quiz.png" alt="Quiz" class="card-image" />
                                <div>
                                    <h3 class="font-semibold text-gray-800 text-lg">Mulai Quiz</h3>
                                    <p class="text-gray-500 text-xs mt-1 line-clamp-2">Ambil kuis training kamu sekarang — waktunya buktikan kemampuanmu!</p>
                                </div>
                            </div>
                        </div>
                    </a>

                    <a href="/Quiz/MyResult" class="block">
                        <div class="card bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:bg-green-50">
                            <div class="flex items-center">
                                <img src="~/Images/Result.png" alt="Result" class="card-image" />
                                <div>
                                    <h3 class="font-semibold text-gray-800 text-lg">Hasil Saya</h3>
                                    <p class="text-gray-500 text-xs mt-1 line-clamp-2">Lihat riwayat kuis kamu — pelajari hasilnya dan tingkatkan performa!</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }

        </div>
    </div>



</body>
</html>